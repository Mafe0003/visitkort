---
const pathname = new URL(Astro.request.url).pathname;
---
<header x-data="{ showmenu: false }" 
    class="absolute top-0 left-0 w-full z-50 bg-secondary-500">
    <div id="navbar" class="container mx-auto py-4 px-6 md:py-6 md:px-4 flex flex-row justify-between items-center">
        <!-- Logo -->
        <div id="logo">
            <a href="/" class="font-caveat text-2xl md:text-3xl">Margherita</a>
        </div>

        <!-- Desktop menu -->
        <!-- Desktop menu -->
<nav id="desktopmenu" class="hidden lg:block">
  <ul class="flex flex-row gap-10 text-2xl font-caveat">
    <li>
      <a href="#see" class="group relative inline-block">
        <span class="relative z-10">see.</span>
        <img 
          src="/underline_1.svg" 
          alt="underline"
          class="absolute left-0 w-full 
                 opacity-0 group-hover:opacity-100 active:opacity-100
                 transition-opacity duration-300"
        />
      </a>
    </li>
    <li>
      <a href="#think" class="group relative inline-block">
        <span class="relative z-10">think.</span>
