        <!-- Burger button for mobile -->
        <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = ! showmenu">
            <img src="/burgermenu.svg" alt="burgermenu" class="h-8 w-8"/>
        </button>
    </div>

    <!-- Mobile menu -->
    <nav id="mobilmenu" class="lg:hidden flex flex-col items-center bg-secondary-500 backdrop-blur-md" 
        x-show="showmenu" x-transition 
        x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
        <ul class="w-full text-center font-caveat text-xl">
            <li class="py-2"><a href="#see">see.</a></li>
            <li class="py-2"><a href="#think">think.</a></li>
