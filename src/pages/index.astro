---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
---
<MainLayout title="Titel">

	<!-- homepage first section -->
	<article class="relative flex items-center justify-center w-full max-w-5xl mx-auto pt-12">
  <!-- Background text image -->
  <img
    src="/portfolio_overskrift.png"
    alt="overskrift"
    class="absolute left-1/2 top-1/2
           w-[180%] md:w-[140%] lg:w-[180%]
           -translate-x-1/2 -translate-y-[75%]  <!-- move higher on mobile -->
           md:-translate-y-1/2                  <!-- reset for tablet/desktop -->
           object-contain z-0 pointer-events-none"
  />

  <!-- Foreground portrait image -->
  <a href="aboutme" class="block">
  <img
    src="/landingpage_picture.png"
    alt="portrait"
    class="relative z-10 mx-auto max-w-[70%] md:max-w-md lg:max-w-lg 
           transition-transform duration-300 
           md:hover:scale-105"
  />
</a>
</article>

<!-- homepage "tekst" -->
<div class="grid justify-end pr-4
            md:pr-48">
	<p class="font-caveat md:text-3xl">"not a pizza, not a drink, just me"</p>
  </div>

  <!-- "what inspires me" section -->
<article class="w-full my-4 md:my-8">
  <!-- Heading first -->
  <h2
    class="font-caveat text-primary-900 text-6xl md:text-[12rem]
           ml-2 md:ml-16 relative z-10"
  >
    what inspires me
  </h2>

  <!-- Image with negative top margin -->
  <img
    src="/pinterest.jpg"
    alt="portrait"
    class="w-screen md:w-full object-cover -mt-4 md:-mt-12"
  />
</article>





</MainLayout>