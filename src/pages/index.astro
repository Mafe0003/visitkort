---
import '../styles/tailwind.css';
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Landing Page</title>
    <style>
      /* Blinking cursor */
      @keyframes blink {
        0%, 50%, 100% { opacity: 1; }
        25%, 75% { opacity: 0; }
      }
      .cursor {
        display: inline-block;
        width: 1ch; /* same width as a character */
        animation: blink 1s infinite;
      }
    </style>
  </head>
  <body class="bg-secondary-500 flex items-center justify-center min-h-screen">
    <h1
      class="font-cutive text-4xl md:text-[4rem] text-secondary-900 text-center"
      id="typewriter"
    >
      <span id="text"></span><span class="cursor">|</span>
    </h1>

    <script>
      const textContent = "see. think. create.";
      const textEl = document.getElementById("text");
      let index = 0;

      function typeWriter() {
        if (index < textContent.length) {
          textEl.innerHTML += textContent.charAt(index);
          index++;
          setTimeout(typeWriter, 300); // typing speed
        } else {
          // Redirect after typing finishes
          setTimeout(() => {
            window.location.href = "/homepage"; // your homepage
          }, 1000); // 1 second delay before redirect
        }
      }

      typeWriter();
    </script>
  </body>
</html>
